<div>
  <div>
    <h1>
      List of all blogs
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new blog
    </h2>

    <form action="/insert_blog" method="post">
      <div>
        <label for="blogger_id_box">
          Blogger
        </label>

        <input type="text" id="blogger_id_box" name="query_blogger_id">
      </div>

      <div>
        <label for="book_id_box">
          Book
        </label>

        <input type="text" id="book_id_box" name="query_book_id">
      </div>

      <div>
        <label for="content_box">
          Content
        </label>

        <textarea id="content_box" name="query_content" rows="3"></textarea>
      </div>

      <div>
        <label for="privacy_status_box">
          Privacy status
        </label>

        <input type="text" id="privacy_status_box" name="query_privacy_status">
      </div>

      <button>
        Create blog
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Blogger
        </th>

        <th>
          Book
        </th>

        <th>
          Content
        </th>

        <th>
          Privacy status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_blogs.each do |a_blog| %>
      <tr>
        <td>
          <%= a_blog.id %>
        </td>

        <td>
          <%= a_blog.blogger_id %>
        </td>

        <td>
          <%= a_blog.book_id %>
        </td>

        <td>
          <%= a_blog.content %>
        </td>

        <td>
          <%= a_blog.privacy_status %>
        </td>

        <td>
          <%= time_ago_in_words(a_blog.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_blog.updated_at) %> ago
        </td>

        <td>
          <a href="/blogs/<%= a_blog.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
