<div>
  <div>
    <h1>
      Book #<%= @the_book.id %> details
    </h1>

    <div>
      <div>
        <a href="/books">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_book/<%= @the_book.id %>">
          Delete book
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= @the_book.title %>
      </dd>

      <dt>
        Author
      </dt>
      <dd>
        <%= @the_book.author %>
      </dd>

      <dt>
        Summary
      </dt>
      <dd>
        <%= @the_book.summary %>
      </dd>

      <dt>
        Cover url
      </dt>
      <dd>
        <%= @the_book.cover_url %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_book.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_book.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit book
    </h2>

    <form action="/modify_book/<%= @the_book.id %>"  method="post" >
      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title" value="<%= @the_book.title %>">
      </div>

      <div>
        <label for="author_box">
          Author
        </label>

        <input type="text" id="author_box" name="query_author" value="<%= @the_book.author %>">
      </div>

      <div>
        <label for="summary_box">
          Summary
        </label>

        <textarea id="summary_box" name="query_summary"><%= @the_book.summary %></textarea>
      </div>

      <div>
        <label for="cover_url_box">
          Cover url
        </label>

        <input type="text" id="cover_url_box" name="query_cover_url" value="<%= @the_book.cover_url %>">
      </div>

      <button>
        Update book
      </button>
    </form>
  </div>
</div>

<hr>
